<?xml version="1.0" encoding="utf-8"?>
<extension  type="module" version="3.2" client="site" method="upgrade">
	<name>MOD_CONTENT_WELCOME</name>
	<author>Adisak Chaiyakul</author>
	<creationDate>11/6/2015</creationDate>
	<copyright>Copyright 2015 Adisak Chaiyakul. All rights Reserved</copyright>
	<license>GNU/GPU</license>
	<authorEmail>adisakchaiyakul@gmail.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>MOD_WELLCOME_DESCRIPTION</description>
	<files>
		<filename module="mod_smartwelcome">mod_smartwelcome.php</filename>
		<filename>index.html</filename>
		<folder>helper</folder>
		<folder>tmpl</folder>
		
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_content_welcome.ini</language>
		<language tag="en-GB">languages/en-GB.mod_content_welcome.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic"   >
				<field 
					name="visit_count"
					type="text"
					default="0"
					required="true"
					
					label="MOD_WELCOME_VISIT_LABEL"
				/>
				<field
					name="welcome_message"
					type="textarea"
					default="MOD_WELCOME_DEFAULT_MESSAGE"
					
					label="MOD_WELCOME_MESSAGE_LABEL"
					/>

			</fieldset>
			<fieldset name="advanced" label="advanced">
			
				<field
					name="layout"
					type="module_layout"
					
					
					label="MOD_WELCOME_LAYOUT"
					description="MOD_LAYOUT_DESC"
				/>
				<field 
					name="moduleclass_sfx"
					type="textarea"
					rows="3"
					label="MOD_CLASS_SFX"
					description="MOD_CLASS_SFX_DESC"
				/>

			</fieldset>
		</fields>
	</config>
</extension>